<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_header"/>

    <RelativeLayout
        android:id="@+id/layout_reward_main"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_header"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/enjoy_mygoodies_linear_title_parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/enjoy_mygoodies_text_rewardpoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rewardpoints"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/enjoy_mygoodies_text_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/enjoy_mygoodies_text_rewardpoints"
                    android:text=" " />

                <TextView
                    android:id="@+id/enjoy_mygoodies_text_rewardpointsvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/enjoy_mygoodies_text_space"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/enjoy_mygoodies_layout_viewactivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/enjoy_mygoodies_image_viewactivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/viewactivity" />
            </RelativeLayout>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_below="@+id/enjoy_mygoodies_linear_title_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scrollbars="vertical" />

    </RelativeLayout>
</RelativeLayout>
